<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="317dp"
        android:layout_height="69dp"
        android:layout_marginTop="50dp"
        android:max="10"
        android:progress="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_years"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="years "
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <EditText
        android:id="@+id/tv_procent"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="procent"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/tv_payment"
        app:layout_constraintStart_toEndOf="@+id/tv_years"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <EditText
        android:id="@+id/tv_payment"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="payment"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <Button
        android:id="@+id/button"
        android:layout_width="317dp"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:text="calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_procent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="279dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />
</androidx.constraintlayout.widget.ConstraintLayout>